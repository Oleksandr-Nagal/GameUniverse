@model GameUniverse.Models.Game

@{
    ViewData["Title"] = "Редагувати Гру";
}
<h1 class="text-center">Редагувати Гру</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Назва</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Опис</label>
        <textarea name="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Жанр</label>
        <input type="text" name="Genre" class="form-control" value="@Model.Genre" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Розробник</label>
        <input type="text" name="Developer" class="form-control" value="@Model.Developer" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Видавець</label>
        <input type="text" name="Publisher" class="form-control" value="@Model.Publisher" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Дата Виходу</label>
        <input type="date" name="ReleaseDate" class="form-control" value="@Model.ReleaseDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="mb-3">
        <label class="form-label">URL зображення</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>
    <button type="submit" class="btn btn-primary">Зберегти Зміни</button>
</form>
