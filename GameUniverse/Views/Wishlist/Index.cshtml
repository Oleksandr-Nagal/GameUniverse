@model List<GameUniverse.Models.Wishlist>

@{
    ViewData["Title"] = "Список Бажань";
}

<h1 class="text-center">Список Бажань</h1>

<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @item.Game.Title
            <a asp-action="Remove" asp-route-gameId="@item.GameId" class="btn btn-danger">Видалити</a>
        </li>
    }
</ul>
